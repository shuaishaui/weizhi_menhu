<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.wizz.demo.dao.IntroduceDao">

    <resultMap id="BaseResultMap" type="com.wizz.demo.model.Introduce">
        <id property="id" column="id" jdbcType="INTEGER"/>
        <result property="theme" column="theme" jdbcType="VARCHAR"/>
        <result property="type" column="type_name" jdbcType="VARCHAR"/>
        <result property="content" column="content" jdbcType="VARCHAR"/>
        <result property="fileName" column="file_name" jdbcType="VARCHAR"/>
        <result property="filePath" column="file_path" jdbcType="VARCHAR"/>
        <result property="createDate" column="create_date" jdbcType="TIMESTAMP"/>
        <result property="updateDate" column="update_date" jdbcType="TIMESTAMP"/>
    </resultMap>

    <insert id="save" parameterType="com.wizz.demo.model.Introduce">
        insert into introduce
        (theme,file_name,file_path,content,create_date)values(
        #{theme},#{fileName},#{filePath},#{content},now()
        )
    </insert>

    <delete id="del" parameterType="java.lang.Integer">
        delete from introduce where id = #{id}
    </delete>

    <update id="update" parameterType="com.wizz.demo.model.Introduce">
        update introduce SET
        theme = #{theme},

        content = #{content},
        file_name = #{fileName},
        file_path = #{filePath},
        update_date = now()
        where id = #{id}
    </update>

    <select id="getList" resultMap="BaseResultMap" parameterType="com.wizz.demo.model.Introduce">
        select * from introduce i
        <where>
            1=1
            <if test="id !=null and id != ''">
                and i.id = #{id}
            </if>

            <if test="fileName !=null and fileName != ''">
                and i.file_name like CONCAT('%',#{fileName},'%')
            </if>
        </where>
    </select>

    <select id="get" parameterType="java.lang.Integer" resultType="com.wizz.demo.model.Introduce">
        select
        id as id,

        content as content,
        theme as theme,
        file_name as fileName,
        file_path as filePath,
        create_date as createDate,
        update_date as updateDate
        from introduce where id = #{id}
    </select>

</mapper>